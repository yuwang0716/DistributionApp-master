<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:background="@color/colorText_title">

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="10sp"/>
    </RelativeLayout>
    <include layout="@layout/item_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="7dp"
        android:background="@color/colorText_title">
        <Button
            android:id="@+id/takinggoods_cancelder"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:text="取消订单"
            android:textColor="@color/colorText_get"
            android:background="@drawable/cancelbutton"/>

        <Button
            android:id="@+id/takinggoods_gotOrder"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/reseizebutton"
            android:text="已取餐"
            android:textColor="@color/colorText_title" />
    </LinearLayout>
</LinearLayout>